[%# INTERFACE:
  # name: string; The name of the component
  #
  # description: string; Component description, may be empty
  #
  # bug_count: number; The number of bugs belonging to the component
  #
  # initialowner: string; default assignee, may be empty
  #
  # initialqacontact: string; if system parameter is set to use the default
  #                           qa contact field, then this will be it, 
  #                           may be empty
  #
  # milestoneurl: string; milestone url, if milestones are in use, 
  #                       may be empty
  #
  # product: string; The name of the product
  #
  # disallownew: boolean; Are new bugs allowed for the product flag
  #
  # product_description: string; Description of product
  #%]

[% title = BLOCK %]Изтриване на съставна част на продукта '[% product FILTER html %]'
  [% END %]

[% PROCESS global/header.html.tmpl
  title = title
%]

<table border="1" cellpadding="4" cellspacing="0">
<tr bgcolor="#6666FF">
  <th valign="top" align="left">Поле</th>
  <th valign="top" align="left">Стойност</th>
</tr>
<tr>
  <td valign="top">Съставна част:</td>
  <td valign="top">[% name FILTER html %]</td>
</tr>
<tr>
  <td valign="top">Описание на съставната част:</td>
  <td valign="top">[% description FILTER html_light %]</td>
</tr>
<tr>
  <td valign="top">Подразбиращо се назначение:</td>
  <td valign="top">[% initialowner FILTER html %]</td>
  
[% IF Param('useqacontact') %]
</tr>
<tr>
  <td valign="top">Подразбиращ се качествен контрол:</td>
  <td valign="top">[% initialqacontact FILTER html %]</td>
[% END %]
  
</tr>
<tr>
  <td valign="top">Съставна част на продукта:</td>
  <td valign="top">[% product FILTER html %]</td>

[% IF product_description %]  
</tr>
<tr>
  <td valign="top">Описание на продукта:</td>
  <td valign="top">[% product_description FILTER html_light %]</td>
[% END %]

[% IF Param('usetargetmilestone') %]
</tr>
<tr>
  <td valign="top"><abbr title="Uniform Resource Locator" lang="en">URL</abbr> на важно събитите за продукта:</td>
  <td valign="top"><a href="[% milestoneurl FILTER uri %]">[% milestoneurl FILTER html %]</a></td>
[% END %]

</tr>
<tr>
  <TD VALIGN="top">Затворена за [% terms.bugs %]:</TD>
  <TD VALIGN="top">[% IF $disallownew %]Да[% ELSE %]Не[% END %]</td>
</tr>
<tr>
  <td valign="top">[% terms.Bugs %]:</td>
  <td valign="top">
[% IF bug_count %]
  <a title="Списък с [% terms.bugs %] за съставната част '[% name FILTER html %]'"
     href="buglist.cgi?component=[% name FILTER url_quote %]&amp;product=
          [%- product FILTER url_quote %]">[% bug_count %]</a>
[% ELSE %]
  Няма
[% END %]
  </td>
</tr>
</table>

<h2>Потвръждение</h2>
  
[% IF bug_count %]

  [% IF !Param("allowbugdeletion") %]

    Съжалявам, има

    [% IF bug_count > 1 %] 
      [% bug_count %] [%+ terms.abug %] 
    [% ELSE %]
      [% bug_count %] [%+ terms.bug %] 
    [% END %]

    останал(и) за този компонент. Трябва да преназначите 

    [% IF bug_count > 1 %]
       тези [% terms.bugs %] 
    [% ELSE %]
       този [% terms.bug %]
    [% END %]

    към друга съставна част преди да можете да изтриете тази.

  [% ELSE %]

    <table border="0" cellpadding="20" width="70%" bgcolor="red"><tr><td>

      Има [% IF bug_count > 1 %] 
        въведени [% bug_count %] [%+ terms.abug %]
      [% ELSE %]
        въведен [% terms.bug %]
      [% END %]
      за тази съставна част! Когато я изтриете,
      <b><blink>ВСИЧКИ</blink></b> схранени [% terms.bugs %] и
      тяхната история също ще бъдат изтрити.
      </td></tr></table>

  [% END %]

[% END %]

[% IF bug_count == 0 || Param('allowbugdeletion') %]

  <p>Наистина ли желаете да изтриете тази съставна част?<p>
  
  <form method="post" action="editcomponents.cgi">
  <input type="submit" value="Да, изтриване">
  <input type="hidden" name="action" value="delete">
  <input type="hidden" name="product" value="[% product FILTER html %]">
  <input type="hidden" name="component" value="[% name FILTER html %]">
  </form>

[% END %]

[% PROCESS admin/components/footer.html.tmpl %]

[% PROCESS global/footer.html.tmpl %] 
