<script type="text/javascript">
  function SetCheckboxes(value) {
      var elements = document.forms.changeform.getElementsByTagName('input'),
          numelements = elements.length,
          item, i;
      for (i = 0; i < numelements; i++) {
          item = elements[i];
          if (item.type === 'checkbox' && item.name.match(/^id_/)) {
            item.checked = value;
          }
      }
  }
  document.write(' <input type="button" name="uncheck_all" value="Махни всички отметки" onclick="SetCheckboxes(false);">');
  document.write(' <input type="button" name="check_all" value="Отметни всички" onclick="SetCheckboxes(true);">');
</script>

