[%# Migration note: this whole file corresponds to the old %commandmenu% 
    substitution param in 'footerhtml' %]

[% PROCESS global/variables.none.tmpl %]

<div id="useful-links">
  <div id="links-actions">
    <div class="label">Действия:</div>
    <div class="links">
        <a href="./">Начало</a> | 
        <a href="enter_bug.cgi">Нов</a> | 
        <a href="query.cgi">Търсене</a> |
        
        <form action="buglist.cgi" method="get"
              onsubmit="if (this.quicksearch.value == '')
                        { alert('Моля, въведете един или повече термина за търсене първо.');
                          return false; } return true;">
            <input class="txt" type="text" name="quicksearch">        
        <input class="btn" type="submit" value="Търсене">
        </form> |
        
        <a href="report.cgi">Доклади</a> 
        
        [% IF user.id %]
          [% email = user.login FILTER url_quote %]
          | <a href="request.cgi?requester=[% email %]&amp;requestee=[% email %]&amp;do_union=1&amp;group=type">Мои заявки</a>
        [% ELSE %]
          | <a href="request.cgi">Заявки</a>
        [% END %]
        
        [% IF user.id && Param('usevotes') %]
          | <a href="votes.cgi?action=show_user">Мои&nbsp;гласове</a>
        [% END %]      
        
        [% IF user.login %] 
            [% ' | <a href="sanitycheck.cgi">Санитарна&nbsp;проверка</a>' 
                                                  IF user.groups.tweakparams %]
            [% IF user.get_flag('can_logout') %]
              | <a href="relogin.cgi">Изход</a>&nbsp;
            [% ELSE %]
              | Влезли&nbsp;сте&nbsp;като&nbsp
            [% END %]
            [% IF sudoer %]
              [% sudoer.login FILTER html %] (<b>представящ се за
              [% user.login FILTER html %]</b> 
              <a href="relogin.cgi?action=end-sudo">прекратяване на сесията</a>)
            [% ELSE %]
              [% user.login FILTER html %]
            [% END %]
        [% ELSE %]
            [% IF Param('createemailregexp') %]
              | <a href="createaccount.cgi">Нова&nbsp;регистрация</a>
            [% END %]
            | <a href="index.cgi?GoAheadAndLogIn=1">Вход</a>
        [% END %]
    </div>
  </div>
      
    [% IF user.login %] 
  <div id="links-edit">
    <div class="label">Редактиране:</div>
    <div class="links">

        <a href="userprefs.cgi">Предпочитания</a>
        [% ' | <a href="editparams.cgi">Параметри</a> ' _
           ' | <a href="editsettings.cgi">Потребителски настройки</a>' 
                                                  IF user.groups.tweakparams %]
        [% ' | <a href="editusers.cgi">Потребители</a>'     IF user.groups.editusers 
                                                  || user.can_bless %]
        [% IF Param('useclassification') && user.groups.editclassifications %]
            [% ' | <a href="editclassifications.cgi">Класификации</a>' %]
        [% END %] 
        [% ' | <a href="editproducts.cgi">Продукти</a>' 
                                               IF user.groups.editcomponents %]
        [% ' | <a href="editflagtypes.cgi">Флагове</a>'
                                               IF user.groups.editcomponents %]
        [% ' | <a href="editvalues.cgi">Стойности на полета</a>'
                                               IF user.groups.editcomponents %]
        [% ' | <a href="editgroups.cgi">Групи</a>' 
                                                 IF user.groups.creategroups %]
        [% ' | <a href="editkeywords.cgi">Ключови думи</a>' 
                                                 IF user.groups.editkeywords %]
        [% ' | <a href="editwhines.cgi">Whining</a>' 
                                              IF user.groups.bz_canusewhines %]
    </div>
  </div>
    [% END %]
    

    [%# Saved searches %]
    
  <div id="links-saved">
    <div class="label">
      [% IF user.showmybugslink OR user.queries.size %]
          Съхранени&nbsp;търсения:
      [% END %]
    </div>
    <div class="links">
        [% IF user.showmybugslink %]
          [% filtered_username = user.login FILTER url_quote %]
          <a href="[% Param('mybugstemplate').replace('%userid%', filtered_username) %]">Мои&nbsp;[% terms.Bugs %]</a>
          [% print_pipe = 1 %]
        [% END %]

        [% FOREACH q = user.queries %]
          [% IF q.linkinfooter %]
            [% " | " IF print_pipe %]
            <a href="buglist.cgi?cmdtype=runnamed&amp;namedcmd=[% q.name FILTER url_quote %]">[% q.name FILTER html FILTER no_break %]</a>
            [% print_pipe = 1 %]
          [% END %]
        [% END %]
    </div>
  </div>

  [%# Individual bugs addition %]

  [% PROCESS "global/per-bug-queries.html.tmpl" %]

  [%# Sections of links to more things users can do on this installation. %]
  [% Hook.process("end") %]
</div>
