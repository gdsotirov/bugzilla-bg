[% PROCESS global/variables.none.tmpl %]

[% bugidsummary = bug.bug_id _ ': ' _ bug.short_desc %]
[% attidsummary = attachment.id _ ': ' _ attachment.description %]
[% flagtype_name = flag ? flag.type.name : old_flag.type.name %]
[% statuses = { '+' => "разреши" , '-' => 'отказа' , 'X' => "отхвърли" ,
                '?' => "заяви на" } %]
[% statuses_sbj = { '+' => "разрешен" , '-' => 'отказан' , 'X' => "отхвърлен" ,
                '?' => "заявен" } %]

[% to_identity = "" %]
[% on_behalf_of = 0 %]
[% action = flag.status || 'X' %]

[% IF flag && flag.status == '?' %]
  [% subject_status = "поиска" %]
  [% IF flag.setter_id == user.id %]
    [% to_identity = flag.requestee.identity _ " за" %]
  [% ELSE %]
    [% on_behalf_of = 1 %]
    [% IF flag.requestee %][% to_identity = " да " _ flag.requestee.identity %][% END %]
  [% END %]
[% ELSE %]
  [% IF old_flag && old_flag.status == '?' %]
    [% to_identity = "заявката на " _ old_flag.setter.identity _ " за" %]
  [% END %]
  [% subject_status = statuses_sbj.$action %]
[% END %]
From: [% Param('mailfrom') %]
To: [% to %]
Subject: [% flagtype_name %] [%+ subject_status %]: [[% terms.Bug %] [%+ bug.bug_id %]] [% bug.short_desc %]
[%- IF attachment %] :
  [Приставка [% attachment.id %]] [% attachment.description FILTER clean_text %][% END %]
X-Bugzilla-Type: request
[%+ threadingmarker %]

[%+ USE wrap -%]
[%- FILTER bullet = wrap(80) -%]

[% IF on_behalf_of %]
[% user.identity %] преназначи заявката на [% flag.setter.identity %] за [% flagtype_name %]
[% to_identity %]:
[% ELSE %]
[% user.identity %] [%+ statuses.$action %] [%+ to_identity %] [%+ flagtype_name %]:
[% END %]

[% terms.Bug %] [%+ bugidsummary %]
[% END %]
[%+ urlbase %]show_bug.cgi?id=[% bug.bug_id %]
[% IF attachment %]

[% FILTER bullet = wrap(80) %]
Приставка [% attidsummary %]
[%- END %]
[%+ urlbase %]attachment.cgi?id=[% attachment.id %]&action=edit
[%- END %]
[%- FILTER bullet = wrap(80) %]

[% USE Bugzilla %]
[%-# .defined is necessary to avoid a taint issue in Perl < 5.10.1, see bug 509794. %]
[% IF Bugzilla.cgi.param("comment").defined && Bugzilla.cgi.param("comment").length > 0 %]
------- Допълнителни коментари от [% user.identity %]
[%+ Bugzilla.cgi.param("comment") %]
[% END %]

[%- END %]
