[% title = "Смяна на парола" %]
[% PROCESS global/header.html.tmpl %]

<p>
  За да смените паролата си, въведете нова парола два пъти:
</p>

<form method="post" action="token.cgi">
  <input type="hidden" name="t" value="[% token FILTER html %]">
  <input type="hidden" name="a" value="chgpw">
  <table>
    <tr>
      <th align="right">Нова парола:</th>
      <td>
        <input type="password" name="password">
        (минимум [% constants.USER_PASSWORD_MIN_LENGTH FILTER none %] символа)
      </td>
    </tr>
    
    <tr>
      <th align="right">Нова парола отново:</th>
      <td>
        <input type="password" name="matchpassword">
      </td>
    </tr>
    
    <tr>
      <th align="right">&nbsp;</th>
      <td>
        <input type="submit" id="update" value="Предаване">
      </td>
    </tr>
  </table>
</form>

[% PROCESS global/footer.html.tmpl %]
